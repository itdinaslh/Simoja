@model ProfileVM

@{
    Layout = "_LayoutClient";
    ViewBag.Main = "Penyedia Jasa";
    ViewBag.Category = "Dashboard";
    ViewBag.Title = "Profile";
}

<div class="row">
    <div class="col-md-6 col-xs-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                <h2>Data Perusahaan</h2>
            </div>
            <div class="panel-container show">
                <form method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" id="theID" name="theID" value="{{$data->UserID}}">
                    <div class="panel-content">
                        <div class="form-group">
                            <label for="">Nama Perusahaan</label>
                            <input type="text" class="form-control" value="@Model.Client.ClientName" readonly required autocomplete="off" >
                        </div>
                        <div class="form-group">
                            <label for="">Email</label>
                            <input type="text" class="form-control" value="@Model.Client.ClientPkm!.UserEmail" readonly required autocomplete="off">
                        </div>
                        <div class="form-group">
