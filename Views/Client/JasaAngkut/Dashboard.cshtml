@{
    Layout = "_LayoutClient";
    ViewBag.Main = "Penyedia Jasa";
    ViewBag.Category = "Pengangkutan Sampah";
    ViewBag.Parent = "Kawasan";
    ViewBag.Title = "Dashboard Penyedia Jasa";
}

@section styles {
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
}

<div class="row">
    <div class="col-md-6 col-sm-12">        
        <div id="panel-1" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                <h2>Data Kendaraan</h2>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="tblKendaraan" class="table table-striped table-bordered table-responsive-lg" data-page-length="5">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>No Polisi</th>
                                <th>No Pintu</th>
                                <th>Jenis</th>
                                <th>Tahun Pembuatan</th>
                                <th>Masa Berlaku STNK</th>
                                <th>Masa Berlaku KIR</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
        <div id="panel-1" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                <h2>Data Lokasi</h2>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="lokasiAngkut" class="table table-striped table-bordered table-responsive-lg" data-page-length="5">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Nama Lokasi</th>
                                <th>Kota/Kabupaten</th>
                                <th>Kecamatan</th>
                                <th>Kelurahan</th>
                                <th>Tgl Awal Kontrak</th>
                                <th>Tgl Akhir Kontrak</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-sm-12">
        <div id="panel-1" class="panel">
            <img src="~/img/alur.png" alt="">
            <img src="~/web/images/denah-pesapa-kawan.svg" style="margin-top:40px;" alt="Denah Pesapa Kawan">
            <p style="padding: 10px;">Perpanjangan izin usaha pengelolaan sampah harus diajukan 30 (tiga puluh) hari kerja sebelum habis masa berlaku izin.
                pasal 85 ayat (2)
                Perda DKI Jakarta No.3 Tahun 2013
                </p>

        </div>
    </div>
</div>

@section scripts {
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/pages/jasa/angkutan/dashboard.js"></script>
}