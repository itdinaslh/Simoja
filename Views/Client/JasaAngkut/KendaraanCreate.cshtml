<form asp-controller="KendaraanAngkut" asp-action="StoreKendaraan" class="FormCreate">
    @Html.AntiForgeryToken()
    <div class="modal-header bg-primary-700 bg-success-gradient">
        <h4 class="modal-title">Tambah Kendaraan</h4>
        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>No Polisi <span class="text-danger">*</span></label>
            <input type="text" class="form-control" placeholder="Isi No. Polisi" required autocomplete="off" autofocus />            
        </div>
        <div class="form-group">
            <label for="">No Pintu <span class="text-danger">*</span></label>
            <input type="text" class="form-control" placeholder="Masukan No. Pintu" required autocomplete="off">            
        </div>
        <div class="form-group">
            <label for="">Jenis Kendaraan <span class="text-danger">*</span></label>
            <select id="vehicleType" class="form-control" required></select>            
        </div>
        <div class="form-row">
            <div class="form-group col-md-4 col-xs-12">
                <label for="">Masa Berlaku STNK <span class="text-danger">*</span></label>
                <div class="input-group flex-nowrap">
                    <input type="text" id="tglSTNK" class="form-control datepicker" required autocomplete="off">
                    <div class="input-group-append">
                        <span class="input-group-text fs-xl">
                            <i class="fal fa-calendar"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-4 col-xs-12">
                <label for="">Masa Berlaku KIR <span class="text-danger">*</span></label>
                <div class="input-group flex-nowrap">
                    <input type="text" id="tglKIR" class="form-control datepicker" required autocomplete="off">
                    <div class="input-group-append">
                        <span class="input-group-text fs-xl">
                            <i class="fal fa-calendar"></i>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-4 col-xs-12">
                <label for="">Tahun Pembuatan <span class="text-danger">*</span></label>
                <input type="number" class="form-control" required autocomplete="off" />
            </div>
        </div>
        <div class="form-group">
            <label>Upload Dokumen STNK <span class="text-danger">*</span></label>
            <input type="file" class="form-control" accept="application/pdf, image/*" placeholder="Pilih dokumen STNK" />
        </div>
        <div class="form-group">
            <label>Upload Dokumen KIR <span class="text-danger">*</span></label>
            <input type="file" class="form-control" accept="application/pdf, image/*" placeholder="Pilih dokumen KIR" />
        </div>
        <div class="form-group">
            <label>Upload Bukti Uji Emisi <span class="text-danger">*</span></label>
            <input type="file" class="form-control" accept="application/pdf, image/*" placeholder="Pilih dokumen Uji Emisi" />
        </div>
        <div class="form-group">
            <label>Upload Foto Kendaraan <span class="text-danger">*</span></label>
            <input type="file" class="form-control" accept="image/*" placeholder="Pilih Foto Kendaraan" />
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>