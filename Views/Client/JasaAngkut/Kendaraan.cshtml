@model KendaraanIndexVM

@{
    Layout = "_LayoutClient";
    ViewBag.Main = "Penyedia Jasa";
    ViewBag.Category = "Pengangkutan Sampah";
    ViewBag.Title = "Kendaraan";
}

@section styles {
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
    <link rel="stylesheet" media="screen, print" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" media="screen, print" href="~/css/formplugins/bootstrap-datepicker/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" media="screen, print" href="~/css/addon.css" />
}

<div id='myModal' class='modal fade in' data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6 col-xs-12">
        <div class="p-3 bg-warning-700 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @Model.KendaranBerizin
                    <small class="m-0 l-h-n">Jumlah Kendaraan Berizin</small>
                </h3>
            </div>
            <i class="fal fa-truck position-absolute pos-right pos-bottom opacity-15 mb-n5 mr-n6" style="font-size: 8rem;"></i>
        </div>
    </div>
    <div class="col-md-6 col-xs-12">
        <div class="p-3 bg-info-600 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @Model.KendaraanDiinput
                    <small class="m-0 l-h-n">Jumlah Kendaraan Diinput</small>
                </h3>
            </div>
            <i class="fal fa-align-left position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n4" style="font-size: 6rem;"></i>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        @if (!Model.Forbid) {
            <a class="btn btn-primary showMe text-white" style="margin-bottom:20px;" data-href="/clients/jasa/pengangkutan/kendaraan/create">Tambah Kendaraan</a>
        }

        <div id="panel-1" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                <h2>Data Kendaraan</h2>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="tblKendaraan" class="table table-striped table-bordered table-responsive-lg" data-page-length="5">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>No Polisi</th>
                                <th>No Pintu</th>
                                <th>Jenis</th>
                                <th>Tahun Pembuatan</th>
                                <th>Masa Berlaku STNK</th>
                                <th>Masa Berlaku KIR</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/js/formplugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/modalForm.js"></script>
    <script src="~/pages/angkutan/kendaraan.js"></script>
}