@model KendaraanCreateVM

<form asp-controller="KendaraanAngkut" asp-action="StoreKendaraan" method="post" class="vehicleForm" enctype="multipart/form-data">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IzinID" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        <h4 class="modal-title">Tambah SPJ</h4>
        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-row">
            <div class="form-group col-md-6 col-xs-12">
                <label>No Polisi <span class="text-danger">*</span></label>
                <select asp-for="Kendaraan.JenisKendaraanId" class="form-control vehicle" required></select>
            </div>
        
            <div class="form-group col-md-6 col-xs-12">
                <label for="">Tanggal SPJ <span class="text-danger">*</span></label>
                <div class="input-group flex-nowrap">
                    <input type="text" asp-for="TglBerlakuSTNK" class="form-control datepicker" required>
                    <div class="input-group-append">
                        <span class="input-group-text fs-xl">
                            <i class="fal fa-calendar"></i>
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label><b>Tambah Manifest <span class="text-danger">*</span></b></label>
        </div>
        <div class="form-group">
            <div id="details">
                <div class="row align-items-end mb-3">
                    <div class="col-3">
                        <label>Lokasi Pengangkutan</label>
                        <div class="form-group">
                            <select name="addmore[0][BarangID]" style="width: 100%" class="form-control sLokasi"
                                    id="sLokasi0" required>
                            </select>
                        </div>

                    </div>
                    <div class="col-3">
                        <label>Tujuan</label>
                        <div class="form-group">
                            <select name="addmore[0][Tujuan]" style="width: 100%" class="form-control sTujuan"
                                    id="sTujuan0" required>
                            </select>
                        </div>

                    </div>
                    <div class="col-2">
                        <label>Berat Sampah</label>
                        <input type="text" id="vol0" name="addmore[0][Vol]" class="form-control "
                               required />
                    </div>
                    <div class="col-3">
                        <label>Tanggal Pengangkutan</label>
                        <input type="text" id="rharga0" name="addmore[0][Date]" class="form-control datepicker"
                               required />
                    </div>
                    <div class="col-1 px-0">
                        <a class="btn btn-sm btn-danger text-light mb-1 deleteEl">Delete</a>
                    </div>
                </div>
            </div>
        </div>
        <p id="tambahEl" class="btn btn-sm btn-primary mt-3 text-right text-decoration-underline"
           style="cursor: pointer">
            <u>
                Tambah
                Details
            </u>
        </p>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>