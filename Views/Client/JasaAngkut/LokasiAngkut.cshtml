@{
    Layout = "_LayoutClient";
    ViewBag.Main = "Penyedia Jasa";
    ViewBag.Category = "Pengangkutan Sampah";
    ViewBag.Parent = "Perizinan";
    ViewBag.Title = "Lokasi Angkut";
}

@section styles {
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
}

<!--Modal Window-->
<div id='myModal' class='modal fade in' data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <a class="btn btn-success" style="margin-bottom:20px;"
            asp-action="Create" asp-controller="LokasiAngkut">
                Tambah Lokasi
        </a>
        <div id="panel-1" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                <h2>Data Lokasi</h2>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="lokasiAngkut" class="table table-striped table-bordered table-responsive-lg" data-page-length="5">
                        <thead>
                            <tr>                                
                                <th>Nama Lokasi</th>
                                <th>Kota/Kabupaten</th>
                                <th>Kecamatan</th>
                                <th>Kelurahan</th>
                                <th>Tgl Awal Kontrak</th>
                                <th>Tgl Akhir Kontrak</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/modalForm.js"></script>
    <script src="~/pages/angkutan/lokasiangkut.js"></script>
}