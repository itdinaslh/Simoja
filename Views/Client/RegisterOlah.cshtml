@model RegOlahModel

@{
    Layout = "_RegNew";
    ViewBag.Title = "Jasa Pengolahan";
}

@section styles {    
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" media="screen, print" href="~/css/formplugins/bootstrap-datepicker/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" media="screen, print" href="~/css/formplugins/dropzone/dropzone.css">
    <link rel="stylesheet" media="screen, print" href="~/css/addon.css" />
}

<div class="row">
    <div class="col-xl-4">
        <div id="panel-1" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                <h2>Perizinan &amp; Data</h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">                    
                    <form id="ClientForm" action="/clients/register/olah/save" method="post">
                        <input type="hidden" asp-for="IzinOlah.IzinOlahId" >                        
                        <div class="form-group">
                            <label for="">No. Izin Usaha</label>
                            <input type="text" asp-for="IzinOlah.NoIzinUsaha" class="form-control datainput" required autocomplete="off" autofocus >
                        </div>                        
                        <div class="form-row">
                            <div class="form-group col-md-6 col-xs-12">
                                <label for="">Tanggal Penerbitan Izin *</label>
                                <div class="input-group flex-nowrap">
                                    <input type="text" asp-for="TglAwal" class="form-control datepicker datainput" required autocomplete="off" >
                                    <div class="input-group-append">
                                        <span class="input-group-text fs-xl">
                                            <i class="fal fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group col-md-6 col-xs-12">
                                <label for="">Masa Berakhir Izin *</label>
                                <div class="input-group flex-nowrap">
                                    <input type="text" asp-for="TglAkhir" class="form-control datepicker datainput" required autocomplete="off" >
                                    <div class="input-group-append">
                                        <span class="input-group-text fs-xl">
                                            <i class="fal fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>                            
                        </div>
                        <hr style="border-top: 1px dotted grey;">

                        <div class="form-row">
                            <div class="form-grop col-md-12 col-xs-12">
                                <label for="">Upload Dokumen Izin</label>
                                <div id="fileIzin" class="dropzone needsclick">
                                    <div class="dz-message needsclick">
                                        <i class="fal fa-cloud-upload text-muted mb-3"></i> <br>
                                        <span>Drop file disini atau Klik Untuk Upload.</span>
                                    </div>
                                </div>
                            </div>                            
                        </div>

                        <hr style="border-top: 1px dotted grey;">

                        <div class="form-group text-right">
                            <button type="submit" class="btn btn-success">Tambah Izin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="col-xl-8">
        <div id="panel-2" class="panel">
            <div class="panel-hdr bg-primary-700 bg-warning-gradient" role="heading">
                <h2>Daftar Perizinan</h2>
            </div>
            <div class="panel-container show">
                <div class="panel-content">
                    <table id="tblData" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>No Izin Usaha</th>                                
                                <th>Masa Berakhir</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {    
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/formplugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/js/formplugins/dropzone/dropzone.js"></script>
    <script src="~/js/pages/auth/regolah.js"></script>
}