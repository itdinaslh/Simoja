
@{
    Layout = "_LayoutClient";
    ViewBag.Main = "Penyedia Jasa";
    ViewBag.Category = "Pengolah Sampah";
    ViewBag.Parent = "Laporan";
    ViewBag.Title = "Laporan Olah";
}

@section styles {
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
    <link rel="stylesheet" media="screen, print" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" media="screen, print" href="~/css/formplugins/bootstrap-datepicker/bootstrap-datepicker.min.css" />
    <link rel="stylesheet" media="screen, print" href="~/css/addon.css" />
}


<div id='myModal' class='modal fade in' data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <div id='myModalContent'></div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                <h2>Data Laporan Pengolahan Sampah</h2>
                <div class="panel-toolbar">
                    <button id="btnAddSPJ" class="btn btn-sm btn-primary waves-effect waves-themed">
                        <i class="fal fa-plus"></i> Tambah Laporan Harian
                    </button>
                </div>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="tblReport" class="table table-striped table-bordered table-responsive-lg" data-page-length="5">
                        <thead>
                        <tr>
                            <tr>
                                <th rowspan="2">Tanggal</th>
                                <th rowspan="2">Lokasi Sumber Sampah</th>
                                <th colspan="5" class="text-center">Sampah yang Masuk/Diangkut ke TPS atau TPS 3R</th>
                                <th colspan="3" class="text-center">Pengolahan Sampah</th>
                                <th rowspan="2">Sampah Diangkut TPA</th>
                                <th rowspan="2">Teknologi Yang Digunakan</th>
                                <th rowspan="2">Action</th>
                            </tr>
                            <tr>
                                <th>Mudah Terurai</th>
                                <th>Daur Ulang</th>
                                <th>Sampah B3</th>
                                <th>Residu</th>
                                <th>Total</th>
                                <th>Mudah Terurai</th>
                                <th>Daur Ulang</th>
                                <th>Residu</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/js/formplugins/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/modalForm.js"></script>
    <script src="~/pages/olah/report.js"></script>
}