@model KendaraanChoiceVM

<form asp-controller="IzinAngkut" asp-action="AddKendaraanToIzin" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IzinID" />
    <div class="modal-header bg-primary-700 bg-success-gradient">
        <h4 class="modal-title">Pilih Kendaraan Sesuai Perizinan</h4>
        <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
    </div>
    <div class="modal-body">
        <div class="form-group">
            <label>Teknologi <span class="text-danger">*</span></label>
            <select asp-for="KendaraanID" class="form-control NoPolisi" required></select>
        </div>
      
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Tutup</button>
        <button type="submit" class="btn btn-success">Simpan</button>
    </div>
</form>