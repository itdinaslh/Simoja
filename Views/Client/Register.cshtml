@using System.Security.Claims
@model Simoja.Entity.Client

@{
    Layout = null;
}

<!doctype html>
<html lang="en" data-layout="vertical" data-topbar="light" data-sidebar="dark" data-sidebar-size="lg" data-sidebar-image="none" data-preloader="disable">

<head>

    <meta charset="utf-8" />
    <title>Form Kelengkapan Data - Pesapa Kawan</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Registrasi Pesapa Kawan" name="description" />
    <meta content="Rangga Dwi" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/img/logo-dinas.ico">

    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <!-- Layout config Js -->
    <script src="~/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="~/css/custom.css" rel="stylesheet" type="text/css" />

</head>

<body>
    <!-- auth-page wrapper -->
    <div class="auth-page-wrapper auth-bg-cover py-5 d-flex justify-content-center align-items-center min-vh-100">
        <div class="bg-overlay"></div>
        <!-- auth-page content -->
        <div class="auth-page-content overflow-hidden pt-lg-2">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="row">
                            <div class="col-lg-12 text-center mb-4">
                                <h1 class="text-white">Form Kelengkapan Data</h1>
                            </div>
                        </div>
                        <div class="card overflow-hidden">
                            <div class="row g-0 pt-3">
                                <div class="col-lg-12">
                                    <form asp-action="Register" asp-controller="Client" class="p-4" method="post">
                                        <input type="hidden" asp-for="ClientID" />                                        
                                        <div class="row">
                                            <div class="col-md-12 mb-2">
                                                <h2>Informasi Akun</h2>
                                                <div asp-validation-summary="All" class="text-danger"></div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Email Login <span class="text-danger">*</span></label>
                                                    <input type="text" asp-for="UserId" class="form-control" value="@User.Identity!.Name" readonly placeholder="Email Login" required />                                                    
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Nama Badan Usaha / Penyedia Jasa <span class="text-danger">*</span></label>
                                                    <input asp-for="ClientName" class="form-control" placeholder="Nama Badan Usaha" value="@(((ClaimsIdentity)User.Identity!).Claims.Where(c => c.Type == "given_name").Select(c => c.Value).SingleOrDefault())" readonly required />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">No Telp <span class="text-danger">*</span></label>
                                                    <input asp-for="Telp" class="form-control" placeholder="No Telp" required />
                                                </div>
                                            </div>                                            
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">No. Fax</label>
                                                    <input asp-for="Fax" class="form-control" placeholder="No. Fax" required />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Provinsi <span class="text-danger">*</span></label>
                                                    <select id="sProvinsi" class="form-control" required></select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Kota / Kabupaten <span class="text-danger">*</span></label>
                                                    <select id="sKabupaten" class="form-control" required></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Kecamatan <span class="text-danger">*</span></label>
                                                    <select id="sKecamatan" class="form-control" required></select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Kelurahan <span class="text-danger">*</span></label>
                                                    <select asp-for="KelurahanID" id="sKelurahan" class="form-control" required></select>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="mb-3">
                                                    <label class="form-label">Alamat <span class="text-danger">*</span></label>
                                                    <textarea asp-for="Alamat" class="form-control" rows="3"></textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row">
                                            <div class="col-md-12 mb-2">
                                                <h2>Data PIC</h2>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="mb-3">
                                                    <label class="form-label">Nama Penanggung Jawab <span class="text-danger">*</span></label>
                                                    <input asp-for="PenanggungJawab" class="form-control" placeholder="Penanggung Jawab" required />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="mb-3">
                                                    <label class="form-label">Nama PIC <span class="text-danger">*</span></label>
                                                    <input asp-for="PIC" class="form-control" placeholder="Nama PIC" required />
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="mb-3">
                                                    <label class="form-label">Telepon PIC <span class="text-danger">*</span></label>
                                                    <input asp-for="NoHpPIC" class="form-control" placeholder="Telepon PIC" required />
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="row">
                                            <div class="col-md-12 text-center mt-3">
                                                <button type="submit" class="btn btn-primary">Submit</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end row -->
                        </div>
                        <!-- end card -->
                    </div>
                    <!-- end col -->

                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0">
                                &copy;
                                <script>document.write(new Date().getFullYear())</script> Dinas Lingkungan Hidup Provinsi DKI Jakarta
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->
    <!-- JAVASCRIPT -->
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/bootstrap/js/bootstrap.bundle.min.js"></script>    
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!--select2 cdn-->
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script src="~/pages/address/populate.js"></script>
    <script src="~/pages/registration/index.js"></script>
</body>

</html>