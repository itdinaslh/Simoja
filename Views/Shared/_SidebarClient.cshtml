                                <span class="nav-link-text" data-i18n="nav.laporan_harian"> Laporan Harian Pengolahan</span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("PkmUsaha"))
                    {
                        <li class='@(ViewBag.Parent == "Laporan Usaha" ? "active " : "")'>
                            <a href="/clients/usaha-kegiatan/report" title="Laporan Harian" data-filter-tags="laporan harian">
                                <i class="fal fa-file-alt"></i>
                                <span class="nav-link-text" data-i18n="nav.laporan_harian"> Laporan Harian Kawasan</span>
                            </a>
                        </li>
