                            <span class="nav-link-text" data-i18n="nav.data_lokasi_buang"> Data Lokasi Buang</span>
                        </a>
                    </li>
                }
                <li class='@(ViewBag.Parent == "Perizinan" ? "active open" : "")'>
                    <a href="#" title="Data" data-filter-tags="data">
                        <i class="fal fa-database"></i>
                        <span class="nav-link-text" data-i18n="nav.data">Data Perizinan</span>
                    </a>
                    <ul>
                        @if (User.IsInRole("PkmAngkut"))
