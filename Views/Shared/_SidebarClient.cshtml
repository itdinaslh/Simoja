                                <span class="nav-link-text" data-i18n="nav.laporan_harian"> Laporan Harian Pengakutan</span>
                            </a>
                        </li>
                    }
                    @if (User.IsInRole("PkmOlah"))
                    {
                        <li class='@(ViewBag.Parent == "Laporan Olah" ? "activ" : "")'>
