                                </a>
                            </li>
                            <li class='@(ViewBag.Title == "Lokasi Angkut" ? "active" : "")'>
                                <a asp-controller="LokasiAngkut" asp-action="Index" title="Kerjasama" data-filter-tags="kerjasama">
                                    <span class="nav-link-text" data-i18n="nav.kerjasama"> Kerjasama</span>
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("PkmOlah"))
                        {
                            <li class='@(ViewBag.Title == "Daftar Izin Pengolahan" ? "active" : "")'>
                                <a asp-controller="IzinOlah" asp-action="Perizinan" title="Izin Pengolahan" data-filter-tags="izin pengolahan">
                                    <span class="nav-link-text" data-i18n="nav.izin_pengolahan"> Izin Pengolahan</span>
                                </a>
                            </li>
                        }
                    </ul>
                </li>
