                            <li class='@(ViewBag.Title == "Daftar Izin Pengangkutan" ? "active" : "")'>
                                <a asp-controller="IzinAngkut" asp-action="Perizinan" title="Izin Pengangkutan" data-filter-tags="izin pengangkutan">
