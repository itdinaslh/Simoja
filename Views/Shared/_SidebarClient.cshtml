            <li class="nav-title">Dashboard</li>
            <li class='@(ViewBag.Title == "Dashboard Penyedia Jasa" ? "active" : "")'>
                <a asp-action="Index" asp-controller="Home" title="Dashboard" data-filter-tags="Dashboard">
                    <i class="fal fa-home"></i>
                    <span class="nav-link-text" data-i18n="nav.dashboard">Dashboard</span>
                </a>
            </li>
            <li class='@(ViewBag.Title == "Profile" ? "active" : "")'>
                <a asp-action="Profile" asp-controller="Home" title="Profile" data-filter-tags="Profile">
                    <i class="fal fa-user"></i>
                    <span class="nav-link-text" data-i18n="nav.profile">Profile</span>
