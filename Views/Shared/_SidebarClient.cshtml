                        <span class="nav-link-text" data-i18n="nav.izin_lingkungan">Izin Lingkungan</span>
                    </a>
                </li>
            }
            

            @if (User.IsInRole("PkmAngkut") || User.IsInRole("PkmOlah"))
            {
                <li class="nav-title">Data</li>
                @if (User.IsInRole("PkmAngkut"))
                {
                    <li class='@(ViewBag.Title == "Kendaraan" ? "active" : "")'>
                        <a asp-controller="KendaraanAngkut" asp-action="Kendaraan" title="Data Kendaraan" data-filter-tags="data kendaraan">
