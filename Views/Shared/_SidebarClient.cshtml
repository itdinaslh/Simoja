                    <li class="{{Request::path() == 'clients/jasa/laporan/bulanan' ? 'active' : ''}}">
                        <a href="/clients/jasa/laporan/bulanan" title="Laporan Bulanan" data-filter-tags="laporan bulanan">
                            <i class="fal fa-file"></i>
                            <span class="nav-link-text" data-i18n="nav.laporan_bulanan"> Laporan Bulanan</span>
                        </a>
