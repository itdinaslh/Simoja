                    <span class="nav-link-text" data-i18n="nav.data">Laporan</span>
                </a>
                <ul>
                    @if (User.IsInRole("PkmAngkut"))
                    {
                        <li class='@(ViewBag.Parent == "Laporan Angkut" ? "active" : "")'>
