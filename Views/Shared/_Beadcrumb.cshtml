@using System.Globalization

<ol class="breadcrumb page-breadcrumb">
    <li class="breadcrumb-item"><a href="javascript:void(0);">@ViewBag.Main</a></li>
    <li class="breadcrumb-item">@ViewBag.Category</li>
    <li class="breadcrumb-item active">@ViewBag.Title</li>
    <li class="position-absolute pos-top pos-right d-none d-sm-block"><span>@DateTime.Now.ToString("dddd, dd-MM-yyyy", CultureInfo.CreateSpecificCulture("id-ID"))</span></li>
</ol>