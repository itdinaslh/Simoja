<div class="row">
        <div class="col-md-6 col-xs-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                    <h2>Data Kendaraan</h2>
                </div>
                <div class="panel-container show">
                    <form action="/clients/jasa/angkutan/kendaraan/update" method="post">
                        @Html.AntiForgeryToken()
                        <div class="panel-content">
                            <div class="form-group">
                                <input type="hidden" asp-for="Kendaraan.KendaraanID">
                                <label for="">No Polisi <span class="text-danger">*</span></label>
                                <input asp-for="Kendaraan.NoPolisi" class="form-control" readonly required autofocus autocomplete="off" >
                            </div>
                            <div class="form-group">
                                <label for="">No Pintu <span class="text-danger">*</span></label>
                                <input asp-for="Kendaraan.NoPintu" class="form-control" readonly required autocomplete="off" >
                            </div>
                            <div class="form-group">
                            <label for="">Jenis Kendaraan <span class="text-danger">*</span></label>
                                <select name="vehicleType" id="vehicleType" class="form-control" disabled required>
                                    <option value="@Model.Kendaraan.JenisKendaraanId">@Model.Kendaraan.JenisKendaraan.NamaJenis</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label for="">Masa Berlaku STNK *</label>
                                <div class="input-group flex-nowrap">
                                    <input type="text" asp-for="MasaBerlakuSTNK" class="form-control datepicker" required autocomplete="off" >
                                    <div class="input-group-append">
                                        <span class="input-group-text fs-xl">
                                            <i class="fal fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="">Masa Berlaku KIR *</label>
                                <div class="input-group flex-nowrap">
                                    <input type="text" asp-for="MasaBerlakuKIR" class="form-control datepicker" required autocomplete="off" >
                                    <div class="input-group-append">
                                        <span class="input-group-text fs-xl">
                                            <i class="fal fa-calendar"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="">Tahun Pembuatan *</label>
                                <input class="form-control" value="@Model.Kendaraan.TahunPembuatan" readonly required autocomplete="off" >
                            </div>
                            <div class="form-group text-right">
                                <button class="btn btn-success" type="submit">Update Data</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
