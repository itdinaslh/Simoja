@model IndexAngkutanVM

@{
    ViewBag.Main = "Penyedia Jasa";
    ViewBag.Category = "Pengangkutan";
    ViewBag.Title = "Jasa Angkutan Terverifikasi";
    ViewBag.Parent = "Penyedia Jasa";
}

@section styles {
    <link rel="stylesheet" media="screen, print" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/css/datagrid/datatables/datatables.bundle.css" />
    <link rel="stylesheet" href="~/lib/sweetalert/sweetalert2.min.css" />
}

<div class="row">
    <div class="col-md-4 col-xs-12">
        <div class="p-3 bg-warning-900 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    {{$vl}}
                    <small class="m-0 l-h-n">Jumlah Kendaraan Berizin</small>
                </h3>
            </div>
            <i class="fal fa-truck position-absolute pos-right pos-bottom opacity-15 mb-n5 mr-n6" style="font-size: 8rem;"></i>
        </div>
    </div>
    <div class="col-md-4 col-xs-12">
        <div class="p-3 bg-info-900 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    @Model.TotalKendaraan
                    <small class="m-0 l-h-n">Jumlah Kendaraan Diinput</small>
                </h3>
            </div>
            <i class="fal fa-clipboard position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n4" style="font-size: 6rem;"></i>
        </div>
    </div>
    <div class="col-md-4 col-xs-12">
        <div class="p-3 bg-danger-900 rounded overflow-hidden position-relative text-white mb-g">
            <div class="">
                <h3 class="display-4 d-block l-h-n m-0 fw-500">
                    {{$TotalKendPTSP}}
                    <small class="m-0 l-h-n">Jumlah Input Kendaraan PTSP</small>
                </h3>
            </div>
            <i class="fal fa-database position-absolute pos-right pos-bottom opacity-15 mb-n1 mr-n4" style="font-size: 6rem;"></i>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xl-12">
        <div id="panel-1" class="panel">
            <div class="panel-hdr bg-primary-700 bg-success-gradient" role="heading">
                <h2>Daftar Penyedia Jasa Angkutan Terverifikasi</h2>
            </div>
            <div class="panel-container show">
                <div id="listContent" class="panel-content">
                    <table id="tblJasa" class="table table-striped table-bordered table-responsive-lg" data-page-length="5">
                        <thead>
                            <tr>                                
                                <th>Nama Usaha</th>                                
                                <th>Email</th>
                                <th>Telp</th>
                                <th>Kota/Kabupaten</th>
                                <th>Tgl. Pendaftaran</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/lib/sweetalert/sweetalert2.all.min.js"></script>
    <script src="~/js/datagrid/datatables/datatables.bundle.js"></script>
    <script src="~/js/modalForm.js"></script>
    <script src="~/js/pages/admin/jasa/angkutan/index.js"></script>
}